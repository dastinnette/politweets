<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

<br>
<div class="container">
  <h3 class="t-index-title"><%= @state.name %></h3>
  <p class="t-index-text"><%= @state.description %></p>

  <div class="row">
    <div class="col s6 center">
      <br><h5 class="t-index-title">Tweets for Bernie</h5>
      <h3 class="t-index-title">
        <%= Tweet.bernie_by_state(State.state_hash.invert[@state.name]) %>
      </h3>
    </div>
    <div class="col s6 center">
      <br><h5 class="t-index-title">Tweets for Trump</h5>
      <h3 class="t-index-title">
        <%= Tweet.trump_by_state(State.state_hash.invert[@state.name]) %>
      </h3>
    </div>
  </div>

  <h5 class="t-index-title">Live Tweets from <%= @state.name %></h5>
  <div class="t-index-text">
    <% @state.tweets_by_state.each do |tweet| %>
      User: <%= tweet.handle %><br>
      Location: <%= tweet.location %><br>
      Tweet: <%= tweet.message %><br><br>
    <% end %>
  </div>

</div>
