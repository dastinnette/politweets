<div class="box">
  <table class="highlight table-color">
    <thead>
      <tr>
          <th>State</th>
          <th>Bernie Tweets</th>
          <th>Trump Tweets</th>
          <th>Winner</th>
      </tr>
    </thead>

    <tbody>
      <% cache("tweets-breakdown5") do %>
        <% Tweet.state_codes.each do |state| %>
          <tr>
            <td>
              <%= link_to "state", state_path(id: :state_id), class: "waves-effect waves-light btn indigo darken-2" %>
            </td>
            <td>
              <%= Tweet.bernie_by_state(state) %>
            </td>
            <td>
              <%= Tweet.trump_by_state(state) %>
            </td>
            <td>
              <%= Tweet.winning_margin(state) %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
